<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SipPOS.Views.MainMenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SipPOS.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
        <!--Authentication status-->
        <TextBlock
            Text="{x:Bind ViewModel.CurrentStoreAuthenticationStatus}"/>

        <!--Navigation buttons-->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <!--To CreateOrderView Button-->
            <Button x:Name="toCreateOrderViewButton"
                    Content="Bán hàng"/>

            <!--To ProductMangementView Button-->
            <Button x:Name="toProductManagementViewButton"
                    Click="toProductManagementViewButton_Click"
                    Content="Hàng hóa"/>

            <!--To StaffManagementView Button-->
            <Button x:Name="toStaffManagementViewButton"
                    Content="Nhân sự"/>

            <!--To FinanceView Button-->
            <Button x:Name="toFinanceViewButton"
                    Content="Doanh thu"/>

            <!--To StoreSettingsView Button-->
            <Button x:Name="toStoreSettingsViewButton"
                    Content="Thiết đặt"/>
        </StackPanel>

        <!--Change ID button (staff logout)-->
        <Button x:Name="changeIdButton"
                Click="changeIdButton_Click"
                Content="Đổi ID"/>
    </StackPanel>

    
</Page>
